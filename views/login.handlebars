<main class="form-signin text-center">
  <form id="loginForm"
    <h1 class="h3 mb-3 fw-normal">Login</h1>

    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="usernameLogin" placeholder="Doe246" autofocus="true">
      <label for="usernameLogin">Username</label>
    </div>
    <div class="form-floating mb-3">
      <input type="password" class="form-control" id="passwordLogin" placeholder="Password" autofocus="true">
      <label for="passwordLogin">Password</label>
    </div>

    <button class="w-100 btn btn-lg btn-info mb-3" type="submit">Sign in</button>
    <a class="login-link" href="/signup">Sign up</a>
   </form>
</main>

<script src="/js/login.js"></script>